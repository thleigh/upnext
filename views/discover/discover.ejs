<div id="topDiscover">

    <div class="subHeaderContainer">
        <h1 class="subHeader">discover</h1>
    </div>
    
    <form action="/discover/:shoe" method="GET">
        <div class="searchBar">
            <input type="text" class="shoeSearch" name="shoe" required placeholder="Find a shoe:">
            <!-- <button type="submit">X</button> -->
        </div>
    </form>
</div>
    

