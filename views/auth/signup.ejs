<h1 class="pageTitleSignUp">Sign-up</h1>

<form action="/auth/signup" method="POST">
  <div id="signup">
    <div id="signup2"></div>

    <div id="signupEmail">
      <input required placeholder="Email:" class="signupDetails" id="new-email" type="email" name="email">
    </div>

      <div id="signupName">
        <input required placeholder="Name:" class="signupDetails" id="new-name" type="text" name="name">
      </div>
      
      <div id="signupPassword">
        <input required placeholder="Password:" class="signupDetails" id="new-password" type="password" name="password">
      </div>

      <div id="signupSubmit">
        <input id="submit2" type="submit" value="Submit">
      </div>
    </div>
  </div>
</form>
